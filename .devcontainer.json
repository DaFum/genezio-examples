{
	"name": "genezio",
	"context": ".",
	"dockerFile": "Dockerfile",

    "forwardPorts": [8083, 5173],

    "portsAttributes": {
        "8083": {
            "label": "Application",
            "onAutoForward": "ignore"
        },
        "5173": {
            "label": "Application",
            "onAutoForward": "ignore"
        }

    },
    "features": {
        "ghcr.io/devcontainers/features/github-cli": "latest"
    },
    "postAttachCommand": "gh codespace ports visibility 5173:public 8083:public -c $CODESPACE-NAME",

    "customizations": {
        "vscode": {
            "settings": {
                "workbench.colorTheme": "Default Dark+"
            }
        }
    }
}
